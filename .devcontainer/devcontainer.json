{
  "name": "Power System Simulation Codespace (Python)",
  
  // 1. DefiniÃ§Ã£o da Imagem Base (Garante Python 3.12, Git, Node.js e ferramentas essenciais)
  "image": "mcr.microsoft.com/devcontainers/python:3.12", 
  
  // 2. Comandos de ConfiguraÃ§Ã£o AutomÃ¡tica (Executados apenas UMA vez apÃ³s a criaÃ§Ã£o)
  "postCreateCommand": "python3 -m venv .venv && .venv/bin/pip install --upgrade pip && .venv/bin/pip install -r requirements.txt",
  
  // 3. ConfiguraÃ§Ãµes EspecÃ­ficas do VS Code (VS Code Customizations)
  "customizations": {
    "vscode": {
      // 3.1. ConfiguraÃ§Ãµes de Ambiente
      "settings": {
        // Define o interpretador Python padrÃ£o para o novo venv criado
        "python.defaultInterpreterPath": ".venv/bin/python",
        // SugestÃµes para facilitar o desenvolvimento (opcional)
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        }
      },
      
      // 3.2. ExtensÃµes Recomendadas (Instaladas automaticamente para todos)
      "extensions": [
        "ms-python.python",        // Essencial para Python
        "ms-python.vscode-pylance", // Servidor de linguagem mais rÃ¡pido
        
        // Suas ExtensÃµes Adicionais:
        "ms-toolsai.jupyter",       // ðŸŸ¢ Suporte para Notebooks Jupyter
        "ritwickdey.liveserver",    // ðŸŸ¢ Para servidor de desenvolvimento web (HTML/CSS/JS)
        "ms-vscode.live-share",     // ColaboraÃ§Ã£o em tempo real
        "yzane.markdown-pdf",       // ðŸŸ¢ Para exportar arquivos Markdown como PDF

        // Outras ExtensÃµes que eram recomendadas:
        "streetsidesoftware.code-spell-checker",
        "esbenp.prettier-vscode"
      ]
    }
  },
  
  // 4. Encaminhamento AutomÃ¡tico de Portas (Para o Live Server e outros serviÃ§os)
  "forwardPorts": [5500, 8000, 8080], // Adicionei a porta 5500, padrÃ£o do Live Server
  
  // 5. ConfiguraÃ§Ãµes do Terminal (Para carregar o venv automaticamente)
  "onCreateCommand": "echo 'source .venv/bin/activate' >> ~/.bashrc" 
}